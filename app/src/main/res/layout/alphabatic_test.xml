<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/as"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Alphabet"
        android:textColor="#fff"
        android:id="@+id/textView"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="normal|italic"
        android:fontFamily="san-serif-thin"
        android:textSize="28sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#fff"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/a"
                android:layout_marginTop="30dp"

                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:id="@+id/c"
                android:layout_alignTop="@+id/a"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/b"
                android:gravity="center"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:layout_above="@+id/e"
                android:layout_alignStart="@+id/n"
                android:layout_marginBottom="6dp"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/d"
                android:layout_below="@+id/a"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E"
                android:id="@+id/e"
                android:layout_alignTop="@+id/d"
                android:layout_alignStart="@+id/b"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:id="@+id/f"
                android:layout_alignTop="@+id/e"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G"
                android:id="@+id/g"
                android:layout_below="@+id/d"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"
                android:id="@+id/h"
                android:layout_alignTop="@+id/g"
                android:layout_alignStart="@+id/e"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I"
                android:id="@+id/i"
                android:layout_alignTop="@+id/h"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K"
                android:id="@+id/k"
                android:layout_below="@+id/h"
                android:layout_alignStart="@+id/h"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J"
                android:id="@+id/j"
                android:layout_alignTop="@+id/k"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:id="@+id/l"
                android:layout_alignTop="@+id/k"
                android:layout_alignStart="@+id/i"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N"
                android:id="@+id/n"
                android:layout_below="@+id/k"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@drawable/round"
                android:textSize="17dp"
                android:textColor="#fff"
                android:fontFamily="san-serif-thin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:id="@+id/m"
                android:layout_alignTop="@+id/n"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginLeft="25dp"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialogu_bg"
    android:layout_height="match_parent">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=" Write To Us "
        android:background="@drawable/dialogu_bg"
        android:id="@+id/button8"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:backgroundTint="#445363"
        android:layout_below="@+id/space11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Write to us about any issues or suggestions about Easy-GRE Application. "
        android:id="@+id/textView6"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:textColor="#ffffff"
        android:fontFamily="san-serif-thin"
        android:textSize="15sp"
        android:background="@drawable/round"
        android:textStyle="bold"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Follow on Instagram"
        android:id="@+id/button10"
        android:background="@drawable/dialogu_bg"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:backgroundTint="#445363"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Follow our Instagram page for new and essential GRE words in your feed."
        android:id="@+id/textView8"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:textColor="#ffffff"
        android:fontFamily="san-serif-thin"
        android:textSize="15sp"
        android:background="@drawable/round"
        android:textStyle="bold"
        android:layout_below="@+id/button10"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Rate  EASY-GRE"
        android:background="@drawable/dialogu_bg"
        android:id="@+id/button9"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:backgroundTint="#445363"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please support us by rating our appliation on google play store"
        android:id="@+id/textView7"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:textColor="#ffffff"
        android:fontFamily="san-serif-thin"
        android:textSize="15sp"
        android:background="@drawable/round"
        android:textStyle="bold"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space11" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/space12"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialogu_bg"
    android:layout_height="fill_parent" >



    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text=" OK "
        android:textColor="#fff"
        android:background="@drawable/dialogu_bg"
        android:textStyle="bold|normal"
        android:backgroundTint="#445363"

        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Easy-Gre is an application with more than 1160 High frequency Gre Words that provides to the point meaning. The application provides features like direct Google search for further insights about the word. "
        android:id="@+id/textView5"
        android:gravity="center_horizontal"
        android:fontFamily="san-serif-thin"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/space8"
        android:layout_below="@+id/dialogButtonOK"
        android:layout_alignParentStart="true" />


</RelativeLayout>

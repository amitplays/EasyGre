<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/as"
    android:layout_height="match_parent">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/masteredlist"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:nestedScrollingEnabled="true"
        android:fastScrollAlwaysVisible="true"
        android:fastScrollEnabled="true"
        android:divider="#fff"
        android:background="@drawable/as"
        android:dividerHeight="0.01dp"
        android:layout_below="@+id/index"
        android:layout_alignParentStart="true"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="true"
        android:smoothScrollbar="true"
        android:scrollingCache="true"
        android:headerDividersEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mastered Words"
        android:textColor="#dadada"
        android:id="@+id/index"
        android:background="#80250D0B"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/masteredlist"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="28sp"
        android:textStyle="bold|normal" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/reset"
        android:background="@drawable/re"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/qm"
        android:id="@+id/button4"
        android:padding="6dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />


</RelativeLayout>